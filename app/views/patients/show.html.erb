<h1><%= @patient.name %></h1>
<h3>Appointments:</h3>
<br>
<ul>
  <% @patient.appointments.each do |appointment| %>
  <li>
    Doctor: <%= link_to appointment.doctor.name, appointment.doctor %> | Appointment Time: <%= appointment.appointment_datetime.strftime("%B %d, %Y at %H:%M") %>
  </li>
  <% end %>
</ul>
